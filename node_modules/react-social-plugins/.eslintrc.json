{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "16.4.2"
        }
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "IN": true,
        "describe": true,
        "it": true,
        "expect": true,
        "beforeAll": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "padded-blocks": [
            "error",
            "never"
        ],
        "max-statements": [
            "error",
            15
        ],
        "no-invalid-this": [
            "off",
            "always"
        ],
        "new-cap": [
            "off",
            "always"
        ],
        "max-len": [
            "error",
            {
                "ignoreUrls": true
            }
        ],
        "no-alert": [
            "off"
        ]
    }
}
